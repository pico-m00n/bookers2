<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
       <li class="navbar-brand p-3"><%= link_to 'Bookers', root_path, class:"nav-link text-white" %></li>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>



      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>

            <li class="nav-item">
              <%= link_to user_path(current_user) do %>
              <div class="nav-link text-white"><i class="fas fa-home"></i>Home</div>
              <% end  %>
            </li>

            <li class="nav-item">
              <%= link_to users_path do %>
              <div class='nav-link text-white'><i class="fas fa-users"></i>Users</div>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to books_path do %>
              <div class='nav-link text-white'><i class="fas fa-book-open"></i>Books</div>
              <% end %>
            </li>


            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
              <div class='nav-link text-white'><i class="fas fa-sign-out-alt"></i>Log out</div>
              <% end %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to root_path do %>
              <div class='nav-link text-white'><i class="fas fa-home"></i>Home</div>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to about_path do %>
              <div class='nav-link text-white'><i class="fas fa-link"></i>About</div>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to  new_user_registration_path do %>
              <div class='nav-link text-white'><i class="fas fa-user-plus"></i>Sign up</div>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to  new_user_session_path do %>
              <div class='nav-link text-white'><i class="fas fa-sign-in-alt"></i>Log in</div>
              <% end %>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>