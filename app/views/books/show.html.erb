<p class="text-success"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/user_info', user: @book.user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/new', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
         <th scope="row">
           <tr>
             <td>
               <%= link_to user_path(@book.user_id) do %>
                 <% if @book.user.profile_image.attached? %>
                   <%= image_tag @book.user.get_profile_image(40,40) %>
                   <br>
                   <%= @book.user.name %>
                 <% else %>
                    <%= image_tag 'no_image', size: "40x40" %>
                    <br>
                    <%= @book.user.name %>
                 <% end %>
               <% end %>
             </td>
             <td><%= @book.title %></td>
             <td><%= @book.body %></td>
             <% if @book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(@book), class:'btn btn-success' %></td>
             <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm"=>"本当に削除しますか？", class:'btn btn-danger' %></td>
             <% end %>
             </tr>
           </th>
       </tbody>
     </table>
    </div>
  </div>
</div>

