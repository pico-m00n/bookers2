<p id="notice"></p>
<div class="container">

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
     <div class="text-danger">
       <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
     </div>
    <% end %>

      <%= form_with model: @book, url: book_path, method: :patch  do |f| %>

        <div class="form-group">
          <label for="input Title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class:'form-control' %>
        </div>

        <div class="form-group">
          <label for="input Opinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class:'btn btn-success' %>
        </div>

        <%= link_to "Show", book_path %>
        |
        <%= link_to "Back", books_path(@books) %>

      <% end %>
    </div>
  </div>
</div>
