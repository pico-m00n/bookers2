<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

     <% if @user.errors.any? %>
       <div class="text-danger">
         <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
       </div>
      <% end %>

      <%= form_with model: @user do |f| %>

        <div class="form-group">
          <label for="input Name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control' %>
        </div>

        <div class="form-group">
          <label for="input Image">Image</label>
          <%= f.file_field :profile_image,  accept: "image/*", class:'form-control-file' %>
        </div>

        <div class="form-group">
          <label for="input Introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputName", class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
