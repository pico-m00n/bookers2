<table class="table">
  <tr>
    <%= image_tag user.get_profile_image(100,100)  %>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<div>
  <%= link_to edit_user_path(user) do %>
  <div class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></div>
  <% end %>
</div>


